# ── Database ──────────────────────────────────────────────────
# Pooled connection string (used at runtime by the app)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?sslmode=require"
# Direct (non-pooled) connection string – used for migrations
# On Vercel this falls back to POSTGRES_URL_NON_POOLING automatically
DIRECT_DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?sslmode=require"

# ── Site URL ──────────────────────────────────────────────────
# Public-facing URL (used for SEO, sitemaps, Open Graph, etc.)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
# NextAuth needs this to build callback URLs
NEXTAUTH_URL="http://localhost:3000"

# ── Auth ──────────────────────────────────────────────────────
# Generate with: openssl rand -base64 32
AUTH_SECRET="PASTE_YOUR_SECRET_HERE"

# Google OAuth  (https://console.cloud.google.com/apis/credentials)
AUTH_GOOGLE_ID="YOUR_GOOGLE_CLIENT_ID"
AUTH_GOOGLE_SECRET="YOUR_GOOGLE_CLIENT_SECRET"


